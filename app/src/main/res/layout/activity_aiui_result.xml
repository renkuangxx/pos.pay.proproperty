<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_main"
    android:background="@drawable/app_shape_change_4a000000_cc000000">

    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="好的，帮你打开了。"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:maxLines="2"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:layout_marginBottom="@dimen/dime_32dp"
            android:layout_marginRight="@dimen/dime_16dp"
            android:layout_marginLeft="@dimen/dp_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dime_32dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_speak_continue"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dime_16dp"
                android:background="@mipmap/icon_voice"/>
            <TextView
                android:id="@+id/tv_continue_chips1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:text="帮我开门"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                android:background="@drawable/app_shape_solid_80000000_14radius"
                android:gravity="center"
                android:includeFontPadding="false"
                android:layout_marginLeft="@dimen/dime_16dp"
                android:paddingLeft="@dimen/dime_16dp"
                android:paddingRight="@dimen/dime_16dp"/>
            <TextView
                android:id="@+id/tv_continue_chips2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:includeFontPadding="false"
                android:text="帮我物业缴费"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                android:background="@drawable/app_shape_solid_80000000_14radius"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dime_16dp"
                android:paddingLeft="@dimen/dime_16dp"
                android:paddingRight="@dimen/dime_16dp"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>