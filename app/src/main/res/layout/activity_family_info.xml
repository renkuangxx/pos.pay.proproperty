<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.jingpai.pos.customer.views.CustomToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="个人信息"
        android:id="@+id/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="@dimen/dp_2"
        android:gravity="center"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:text="头像"
            android:textColor="#222222"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_personal_image"
                android:layout_marginRight="@dimen/dime_16dp"
                android:src="@drawable/ic_avatar_default_family"
                android:layout_width="56dp"
                android:layout_height="56dp" />
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_alignBottom="@+id/iv_personal_image"
                android:layout_alignRight="@+id/iv_personal_image"
                android:src="@mipmap/pcu" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dime_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_user_name"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="昵称"
                    android:layout_marginLeft="@dimen/dime_16dp"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="" />

                <ImageView
                    android:id="@+id/iv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_16dp"
                    android:src="@mipmap/chevron" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dime_16dp"
                android:background="#F0F0F0" />

            <LinearLayout
                android:id="@+id/ll_sex"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="性别"
                    android:layout_marginLeft="@dimen/dime_16dp"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginRight="@dimen/dime_16dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_16dp"
                    android:src="@mipmap/chevron" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dime_16dp"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="性别"
                    android:layout_marginLeft="@dimen/dime_16dp"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginRight="@dimen/dp_10"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_16dp"
                    android:src="@mipmap/chevron" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dime_16dp"
                    android:layout_weight="1"
                    android:text="手机号"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_my_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_16dp"
                    android:text=""
                    android:textColor="#BDBDBD" />


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_face"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingLeft="@dimen/dime_16dp"
            android:paddingRight="@dimen/dime_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="人脸登记"
                android:textColor="#222222"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_face_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_face_arrow"
                android:layout_marginRight="@dimen/dp_8"
                android:textColor="@color/text_97"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_face_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/chevron" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_document_type"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingLeft="@dimen/dime_16dp"
            android:paddingRight="@dimen/dime_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="证件类型"
                android:textColor="#222222"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_document_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_document_type"
                android:layout_marginRight="@dimen/dp_8"
                android:textColor="@color/text_97"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_document_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/chevron" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_document_num"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingLeft="@dimen/dime_16dp"
            android:paddingRight="@dimen/dime_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="证件号码"
                android:textColor="#222222"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_document_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_document_num"
                android:layout_marginRight="@dimen/dp_8"
                android:textColor="@color/text_97"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_document_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/chevron" />

        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_change_password"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dime_8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="修改密码"
                android:layout_marginLeft="@dimen/dime_16dp"
                android:textColor="#222222"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dime_16dp"
                android:src="@mipmap/chevron" />

        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/ll_address"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingLeft="@dimen/dime_16dp"
            android:paddingRight="@dimen/dime_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="收货地址"
                android:textColor="#222222"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/chevron" />

        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_log_out"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textSize="@dimen/dime_16sp"
            android:textColor="#222222"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center"
            android:text="退出登录"/>
    </LinearLayout>

</LinearLayout>