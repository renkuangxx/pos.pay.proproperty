<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/bg_grey"
    android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.jingpai.pos.customer.views.CustomToolBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="结果页"
            android:id="@+id/toolbar"
            />

        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dime_40dp"
            android:background="@drawable/icon_complete"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_20"
            android:textColor="#212121"
            android:layout_marginTop="@dimen/dime_32dp"
            android:text="提交完成"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dime_8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/iv"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/text_97"
                    android:text="装修单号：#"/>
                <TextView
                    android:id="@+id/tv_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/iv"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/text_97"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_97"
            android:layout_marginTop="@dimen/dime_8dp"
            android:text="您的专属美居顾问，将在24小时内联系您。"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:background="@drawable/app_shape_solid_white_5radius"
            android:layout_marginLeft="@dimen/dime_32dp"
            android:layout_marginRight="@dimen/dime_32dp"
            android:paddingLeft="@dimen/dime_12dp"
            android:paddingRight="@dimen/dime_12dp"
            android:layout_marginTop="@dimen/dime_16dp">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/title_text_color"
                    android:layout_centerVertical="true"
                    android:text="您的联系方式："/>
                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14"
                    android:layout_toRightOf="@+id/tv1"
                    android:layout_centerVertical="true"
                    android:textColor="@color/title_text_color"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_mobile"
                    android:layout_marginLeft="@dimen/dime_16dp"
                    android:textSize="@dimen/text_size_14"
                    android:layout_centerVertical="true"
                    android:textColor="@color/title_text_color"/>
                <TextView
                    android:id="@+id/tv_fix"
                    android:layout_width="@dimen/dime_54dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dime_6dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dime_8dp"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_14"
                    android:background="@drawable/app_shape_solid_0d000000_12radius"
                    android:text="修改"
                    android:drawableRight="@mipmap/icon_chevron_main"
                    android:textColor="@color/main"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_97"
            android:layout_marginTop="@dimen/dime_16dp"
            android:text="您也可以在【我的】-【需求】-【装修】中查看进度"/>

        <TextView
            android:id="@+id/tv_back_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dime_32dp"
            android:layout_marginTop="@dimen/dime_65dp"
            android:layout_marginEnd="@dimen/dime_32dp"
            android:layout_marginBottom="@dimen/dime_16dp"
            android:background="@drawable/button_login_shape"
            android:gravity="center"
            android:text="返回装修首页"
            android:textColor="@color/white"
            android:textSize="@dimen/dime_16sp" />
</LinearLayout>