<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jingpai.pos.customer.views.CustomToolBar
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="住户审核详情" />

    <ScrollView
        android:id="@+id/sc_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_above="@+id/rl_btn"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fitsSystemWindows="true"
            android:orientation="vertical">
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_8dp"
                    android:background="@color/bg_line" />

            <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dime_16dp"
                        android:text="房号"
                        android:textColor="#222222"
                        android:textSize="@dimen/sp_16"/>
                <TextView
                        android:id="@+id/tv_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dime_16dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textSize="@dimen/dime_14sp"
                        android:textColor="#979797"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_8dp"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:text="成员身份"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_shenfen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="@dimen/dime_14sp"
                    android:textColor="#979797"/>
            </RelativeLayout>

            <View
                android:id="@+id/v_view"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/bg_line"/>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:text="成员姓名"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/dime_14sp"
                    android:textColor="#979797"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/bg_line"/>
            <RelativeLayout
                android:id="@+id/rl_tel"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:text="成员手机"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#222222"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:text=""
                    android:textSize="@dimen/dime_14sp"
                    android:textColor="#979797"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bg_line"/>
            </RelativeLayout>


            <RelativeLayout
            android:id="@+id/rl_card_type"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dime_16dp"
                android:text="证件类型"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#222222"
                android:layout_marginBottom="@dimen/dp_8"
                android:textSize="@dimen/sp_16"/>
            <TextView
                android:id="@+id/tv_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dime_16dp"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="@dimen/dime_14sp"
                android:layout_marginBottom="@dimen/dp_8"
                android:textColor="#979797"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_line"/>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_card_no"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:text="证件号"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#222222"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_card_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="@dimen/dime_14sp"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textColor="#979797"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bg_line"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:text="申请时间"
                    android:textColor="#222222"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="@dimen/dime_14sp"
                    android:textColor="#979797"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/bg_line"/>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:text="申请原因"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="@dimen/dime_24dp"
                    android:text="mother fucker"
                    android:layout_below="@+id/tv_title"
                    android:textSize="@dimen/dime_14sp"
                    android:textColor="#979797"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/bg_line"/>

            <RelativeLayout
                android:id="@+id/rl_customer"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:text="客服管家"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:text=""
                    android:textSize="@dimen/dime_14sp"
                    android:textColor="#979797"/>
                <View
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bg_line"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_customer_result"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dime_16dp"
                        android:text="客服审核结果"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:textColor="#222222"
                        android:textSize="@dimen/sp_16"/>
                <TextView
                        android:id="@+id/tv_customer_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dime_16dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:text=""
                        android:textSize="@dimen/dime_14sp"
                        android:textColor="#979797"/>
                <View
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_line"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_customer_time"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:text="客服审核时间"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16"/>
            <TextView
                    android:id="@+id/tv_customer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:text=""
                    android:textSize="@dimen/dime_14sp"
                    android:textColor="#979797"/>
            <View
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bg_line"/>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_owner_result"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:text="产权人审核结果"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16"/>
            <TextView
                    android:id="@+id/tv_owner_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:text=""
                    android:textSize="@dimen/dime_14sp"
                    android:textColor="#979797"/>
            <View
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bg_line"/>
        </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_owner_time"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dime_16dp"
                        android:text="产权人审核时间"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:textColor="#222222"
                        android:textSize="@dimen/sp_16"/>
                <TextView
                        android:id="@+id/tv_owner_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dime_16dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:text=""
                        android:textSize="@dimen/dime_14sp"
                        android:textColor="#979797"/>
                <View
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_line"/>
            </RelativeLayout>
            <LinearLayout
                android:background="@color/white"
                android:id="@+id/ll_refuse_reson"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dime_16dp"
                    android:text="拒绝原因"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                        android:id="@+id/tv_refuse_reson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dp"
                        android:layout_marginRight="@dimen/dime_24dp"
                        android:layout_marginBottom="29dp"
                        android:text="@string/app_name"
                        android:textColor="#979797"
                        android:textSize="@dimen/dime_14sp" />
                <View
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bg_line"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
            android:id="@+id/rl_btn"
            android:layout_width="wrap_content"
            android:layout_height="114dp"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_alignParentBottom="true">
        <TextView
                android:id="@+id/tv_reapply"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginRight="@dimen/dime_38dp"
                android:layout_marginLeft="@dimen/dime_38dp"
                android:background="@drawable/button_login_shape"
                android:gravity="center"
                android:text="重新申请"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="@dimen/dime_16sp" />

        <LinearLayout
                android:id="@+id/ll_apply"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dime_16dp"
                android:layout_marginLeft="@dimen/dime_16dp"
                android:layout_marginRight="@dimen/dime_16dp"
                android:visibility="gone"
                android:orientation="horizontal" >

            <TextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dime_48dp"
                    android:layout_weight="1"
                    android:text="拒绝"
                    android:gravity="center"
                    android:textColor="@color/main"
                    android:textSize="@dimen/text_size_18"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/button_shape_mian"/>

            <TextView
                    android:id="@+id/btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dime_48dp"
                    android:layout_weight="1"
                    android:text="同意"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="@color/white"
                    android:background="@drawable/button_login_shape" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
