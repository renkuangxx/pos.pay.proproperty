<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.view.SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="请保持正脸在取景框内"
        android:textColor="#FF8A49"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_photo"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dime_20dp"
        android:background="@drawable/shape_photo_background"
        android:text="拍摄"
        android:textColor="#fff"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/btn_photo"
        android:layout_marginRight="@dimen/dime_20dp"
        android:layout_toLeftOf="@+id/btn_photo" />

    <ImageView
        android:id="@+id/iv_cancle"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignBottom="@+id/btn_photo"
        android:layout_marginLeft="@dimen/dp_30"
        android:background="@mipmap/cha"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_renxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/ren_kuang" />

    <ImageView
        android:id="@+id/iv_ok"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_alignBottom="@+id/btn_photo"
        android:layout_alignParentRight="true"
        android:background="@mipmap/gou"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dime_16dp"
        android:layout_marginTop="@dimen/dime_16dp"
        android:background="@mipmap/cha" />

</RelativeLayout>
