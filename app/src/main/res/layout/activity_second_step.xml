<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.jingpai.pos.customer.views.CustomToolBar
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="基础信息" />
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dime_8dp"
                android:paddingBottom="@dimen/dime_8dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_num"
                        android:background="@color/bg_census"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_census_num"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_num"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_1"
                        android:text="基础信息"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_num"
                        android:background="@color/bg_census" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_num2"
                        android:background="@color/bg_census" />

                    <TextView
                        android:id="@+id/tv_num2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_census_num"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_num2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_1"
                        android:text="居住信息"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_num2"
                        android:background="@color/bg_census" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_num3"
                        android:background="@color/bg_census" />

                    <TextView
                        android:id="@+id/tv_num3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_census_num_gray"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_num3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_1"
                        android:text="婚姻生育"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_num3"
                        android:background="#D8D9D9" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_num4"
                        android:background="#D8D9D9" />

                    <TextView
                        android:id="@+id/tv_num4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_census_num_gray"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_num4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_1"
                        android:text="其他信息"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_num4"
                        android:background="#D8D9D9"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>


            <!--    户籍地址-->
            <LinearLayout
                android:id="@+id/ll_house_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dime_20dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="户籍地址"
                    android:textColor="#222222"
                    android:textSize="@dimen/dime_16sp" />


                <TextView
                    android:id="@+id/tv_house_register_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_20dp"
                    android:drawableRight="@mipmap/chevron"
                    android:drawablePadding="@dimen/dime_12dp"
                    android:text="请选择"
                    android:textColor="@color/text_97"
                    android:textSize="@dimen/dime_14sp" />
            </LinearLayout>

            <View
                android:id="@+id/underline_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F0F0F0" />

            <!--    Residential_address-->
            <LinearLayout
                android:id="@+id/ll_residential_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dime_20dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="现居住地址"
                    android:textColor="#222222"
                    android:textSize="@dimen/dime_16sp" />


                <TextView
                    android:id="@+id/tv_residential_address_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_20dp"
                    android:drawableRight="@mipmap/chevron"
                    android:drawablePadding="@dimen/dime_12dp"
                    android:text="请选择"
                    android:textColor="@color/text_97"
                    android:textSize="@dimen/dime_14sp" />
            </LinearLayout>

            <View
                android:id="@+id/underline_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F0F0F0" />
            <!--    详细地址-->
            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dime_20dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="详细地址"
                    android:textColor="#222222"
                    android:textSize="@dimen/dime_16sp" />


                <EditText
                    android:id="@+id/tv_address_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_20dp"
                    android:gravity="right"
                    android:hint="请输入详细地址"
                        android:maxLength="50"
                    android:background="@null"
                    android:textColor="@color/text_97"
                    android:textSize="@dimen/dime_14sp" />
            </LinearLayout>

            <View
                android:id="@+id/underline_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F0F0F0"
                android:visibility="visible" />
            <!--    产权面积-->
            <RelativeLayout
                android:id="@+id/ll_nationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tv_nationality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dime_20dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="#222222"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="产权面积"
                    android:textSize="@dimen/dime_16sp" />

                <EditText
                    android:id="@+id/et_area_selector"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入产权面积"
                    android:textColor="#979797"
                    android:inputType="number|numberDecimal"
                    android:gravity="right"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginRight="@dimen/dime_4dp"
                    android:layout_toLeftOf="@+id/tv_area"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_20dp"
                    android:text="平方米"
                    android:textColor="#222222"
                    android:textSize="@dimen/dime_14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/underline_nationality"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F0F0F0"
                android:visibility="visible" />
        </LinearLayout>

    </ScrollView>
    <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="39dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dime_27dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
        <Button
                android:id="@+id/btn_pre_info"
                android:layout_width="164dp"
                android:layout_height="44dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_census_pre_button"
                android:text="上一步"
                android:layout_marginRight="@dimen/dime_16dp"
                android:layout_marginLeft="@dimen/dime_16dp"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_16" />
        <Button
                android:id="@+id/btn_next_info"
                android:layout_width="164dp"
                android:layout_height="44dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_census_button"
                android:text="下一步"
                android:textColor="#ffffff"
                android:layout_marginRight="@dimen/dime_16dp"
                android:textSize="@dimen/sp_16" />

    </LinearLayout>

</RelativeLayout>