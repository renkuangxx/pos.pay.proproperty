<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sidebar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SilderBarActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="wave"
            android:text="wave" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nowave"
            android:text="nowave" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="normal"
            android:text="normal" />
    </LinearLayout>

    <com.jingpai.pos.customer.activity.census.siderbar.SideBar
        android:id="@+id/bar"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        sidebar:scaleTime="1" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:background="@color/bg_census"
        android:gravity="center"
        android:text="A"
        android:textColor="#bb4e79f1"
        android:textSize="25sp"
        android:visibility="gone" />
</RelativeLayout>
