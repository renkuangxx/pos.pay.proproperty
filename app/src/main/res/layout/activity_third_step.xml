<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.jingpai.pos.customer.views.CustomToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:title="基础信息" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dime_8dp"
                android:paddingBottom="@dimen/dime_8dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_num"
                        android:background="@color/bg_census"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_census_num"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_num"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_1"
                        android:text="基础信息"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_num"
                        android:background="@color/bg_census" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_num2"
                        android:background="@color/bg_census" />

                    <TextView
                        android:id="@+id/tv_num2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_census_num"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_num2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_1"
                        android:text="居住信息"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_num2"
                        android:background="@color/bg_census" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_num3"
                        android:background="@color/bg_census" />

                    <TextView
                        android:id="@+id/tv_num3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_census_num"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_num3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_1"
                        android:text="婚姻生育"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_num3"
                        android:background="@color/bg_census" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_num4"
                        android:background="#D8D9D9" />

                    <TextView
                        android:id="@+id/tv_num4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_census_num_gray"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_num4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_1"
                        android:text="其他信息"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_num4"
                        android:background="#D8D9D9"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>


            <!--    婚姻状况-->
            <LinearLayout
                android:id="@+id/ll_marital_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dime_20dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="婚姻状况"
                    android:textColor="#222222"
                    android:textSize="@dimen/dime_16sp" />


                <TextView
                    android:id="@+id/tv_marital_status_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_20dp"
                    android:drawableRight="@mipmap/chevron"
                    android:drawablePadding="@dimen/dime_12dp"
                    android:text="请选择"
                    android:textColor="@color/text_97"
                    android:textSize="@dimen/dime_14sp" />
            </LinearLayout>

            <View
                android:id="@+id/underline_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F0F0F0" />

            <!--    婚姻变动日期-->
            <LinearLayout
                android:id="@+id/ll_marriage_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                    android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dime_20dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="婚姻变动日期"
                    android:textColor="#222222"
                    android:textSize="@dimen/dime_16sp" />


                <TextView
                    android:id="@+id/tv_marriage_change_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_20dp"
                    android:drawableRight="@mipmap/chevron"
                    android:drawablePadding="@dimen/dime_12dp"
                    android:text="请选择"
                    android:textColor="@color/text_97"
                    android:textSize="@dimen/dime_14sp" />
            </LinearLayout>

            <View
                android:id="@+id/underline_marriage_change"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F0F0F0"
                    android:visibility="gone"/>

            <!--    怀孕状况-->
            <LinearLayout
                android:id="@+id/ll_pregnancy_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dime_20dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="怀孕状况"
                    android:textColor="#222222"
                    android:textSize="@dimen/dime_16sp" />

                <TextView
                    android:id="@+id/tv_pregnancy_status_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_20dp"
                    android:drawableRight="@mipmap/chevron"
                    android:drawablePadding="@dimen/dime_12dp"
                    android:text="请选择"
                    android:textColor="@color/text_97"
                    android:textSize="@dimen/dime_14sp" />
            </LinearLayout>

            <View
                android:id="@+id/underline_pregnancy_status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F0F0F0"
                android:visibility="visible" />

            <!--    末次月经日期-->
            <LinearLayout
                android:id="@+id/ll_last_menstruation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dime_20dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="末次月经日期"
                    android:textColor="#222222"
                    android:textSize="@dimen/dime_16sp" />


                <TextView
                    android:id="@+id/tv_last_menstruation_selctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_20dp"
                    android:drawableRight="@mipmap/chevron"
                    android:drawablePadding="@dimen/dime_12dp"
                    android:text="请选择"
                    android:textColor="@color/text_97"
                    android:textSize="@dimen/dime_14sp" />
            </LinearLayout>

            <View
                android:id="@+id/underline_last_menstruation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F0F0F0"
                android:visibility="visible" />

            <!--   节育状况-->
            <LinearLayout
                android:id="@+id/ll_birth_control_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dime_20dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="节育状况"
                    android:textColor="#222222"
                    android:textSize="@dimen/dime_16sp" />


                <TextView
                    android:id="@+id/tv_birth_control_status_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_20dp"
                    android:drawableRight="@mipmap/chevron"
                    android:drawablePadding="@dimen/dime_12dp"
                    android:text="请选择"
                    android:textColor="@color/text_97"
                    android:textSize="@dimen/dime_14sp" />
            </LinearLayout>

            <View
                android:id="@+id/underline_birth_control_status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F0F0F0"
                android:visibility="visible" />

            <!--   节育方式-->
            <LinearLayout
                android:id="@+id/ll_contraceptive_methods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                    android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dime_20dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="节育方式"
                    android:textColor="#222222"
                    android:textSize="@dimen/dime_16sp" />


                <TextView
                    android:id="@+id/tv_contraceptive_methods_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_20dp"
                    android:drawableRight="@mipmap/chevron"
                    android:drawablePadding="@dimen/dime_12dp"
                    android:text="请选择"
                    android:textColor="@color/text_97"
                    android:textSize="@dimen/dime_14sp" />
            </LinearLayout>

            <View
                android:id="@+id/underline_contraceptive_methods"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F0F0F0"
                android:visibility="gone" />

            <!--   生育状况-->
            <LinearLayout
                android:id="@+id/ll_fertility_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dime_20dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="生育状况"
                    android:textColor="#222222"
                    android:textSize="@dimen/dime_16sp" />


                <TextView
                    android:id="@+id/tv_fertility_status_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dime_20dp"
                    android:drawableRight="@mipmap/chevron"
                    android:drawablePadding="@dimen/dime_12dp"
                    android:text="请选择"
                    android:textColor="@color/text_97"
                    android:textSize="@dimen/dime_14sp" />
            </LinearLayout>

            <View
                android:id="@+id/underline_fertility_status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F0F0F0"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_children"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <!--    1孩-->
                <RelativeLayout
                    android:id="@+id/rl_1_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dime_20dp"
                        android:text="一孩"
                        android:textColor="#222222"
                        android:textSize="@dimen/dime_16sp" />

                    <TextView
                        android:id="@+id/tv_man_1_child"
                        android:layout_width="40dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="@dimen/dime_16dp"
                        android:layout_toLeftOf="@+id/tv_women_1_child"
                        android:background="@drawable/bg_census_sex_default"
                        android:gravity="center"
                        android:text="男"
                        android:textColor="#d9d9d9"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_women_1_child"
                        android:layout_width="40dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dime_16dp"
                        android:background="@drawable/bg_census_sex_default"
                        android:gravity="center"
                        android:text="女"
                        android:textColor="#d9d9d9"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:id="@+id/underline_1_child"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_1dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="#F0F0F0"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rl_1_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_1_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dime_20dp"
                        android:drawableRight="@mipmap/chevron"
                        android:drawablePadding="@dimen/dime_12dp"
                        android:text="选择出生日期（必选）"
                        android:textColor="@color/text_97"
                        android:textSize="@dimen/dime_14sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/underline_1_birth"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_1dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="#F0F0F0"
                    android:visibility="gone" />
                <!--    2孩-->
                <TextView
                    android:id="@+id/tv_2delete"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_36dp"
                    android:layout_marginRight="@dimen/dime_12dp"
                    android:gravity="center_vertical|right"
                    android:text="删除"
                    android:textColor="#FFA940"
                        android:visibility="gone"
                    android:textSize="@dimen/dime_14sp" />
                <View
                    android:id="@+id/underline_2_delete"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_1dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="#F0F0F0"
                    android:visibility="gone" />
                <RelativeLayout
                    android:id="@+id/rl_2_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dime_20dp"
                        android:text="二孩"
                        android:textColor="#222222"
                        android:textSize="@dimen/dime_16sp" />

                    <TextView
                        android:id="@+id/tv_man_2_child"
                        android:layout_width="40dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="@dimen/dime_16dp"
                        android:layout_toLeftOf="@+id/tv_women_2_child"
                        android:background="@drawable/bg_census_sex_default"
                        android:gravity="center"
                        android:text="男"
                        android:textColor="#d9d9d9"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_women_2_child"
                        android:layout_width="40dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dime_16dp"
                        android:background="@drawable/bg_census_sex_default"
                        android:gravity="center"
                        android:text="女"
                        android:textColor="#d9d9d9"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:id="@+id/underline_2_child"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_1dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="#F0F0F0"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_2_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_2_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dime_20dp"
                        android:drawableRight="@mipmap/chevron"
                        android:drawablePadding="@dimen/dime_12dp"
                        android:text="选择出生日期（必选）"
                        android:textColor="@color/text_97"
                        android:textSize="@dimen/dime_14sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/underline_2_birth"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_1dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="#F0F0F0"
                    android:visibility="gone" />
                <!--    3孩-->
                <!--    2孩-->
                <TextView
                    android:id="@+id/tv_3delete"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_36dp"
                    android:layout_marginRight="@dimen/dime_12dp"
                    android:gravity="center_vertical|right"
                    android:text="删除"
                    android:textColor="#FFA940"
                        android:visibility="gone"
                    android:textSize="@dimen/dime_14sp" />
                <View
                    android:id="@+id/underline_3_delete"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_1dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="#F0F0F0"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_3_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dime_20dp"
                        android:text="三孩"
                        android:textColor="#222222"
                        android:textSize="@dimen/dime_16sp" />

                    <TextView
                        android:id="@+id/tv_man_3_child"
                        android:layout_width="40dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="@dimen/dime_16dp"
                        android:layout_toLeftOf="@+id/tv_women_3_child"
                        android:background="@drawable/bg_census_sex_default"
                        android:gravity="center"
                        android:text="男"
                        android:textColor="#d9d9d9"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_women_3_child"
                        android:layout_width="40dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dime_16dp"
                        android:background="@drawable/bg_census_sex_default"
                        android:gravity="center"
                        android:text="女"
                        android:textColor="#d9d9d9"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:id="@+id/underline_3_child"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_1dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="#F0F0F0"
                    android:visibility="gone" />

                <RelativeLayout
