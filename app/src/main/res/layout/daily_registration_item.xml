<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_particulars"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="#FFFFFF"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dime_16dp"
            android:layout_marginLeft="@dimen/dp_25"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_daily_time"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="2020-03-08"
                android:textColor="#333333"
                android:textSize="17sp"
                />

            <TextView
                android:id="@+id/tv_daily_type"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="健康"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="#333333"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dime_32dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_daily_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36.4℃"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="31dp"
                android:layout_marginLeft="@dimen/dp_8"
                android:textColor="#222222"
                android:textSize="@dimen/dime_18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:layout_marginRight="@dimen/dime_16dp"
                android:src="@mipmap/chevron" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>