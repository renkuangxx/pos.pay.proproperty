<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dime_32dp"
    android:paddingRight="@dimen/dime_32dp"
    android:gravity="center"
    android:id="@+id/rl_dialog">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@mipmap/download_top"/>
        <TextView
            android:id="@+id/tv_new_version_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="66dp"
            android:text="新版本"/>
        <TextView
            android:id="@+id/tv_new_version_name"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_18"
            android:textSize="@dimen/font_10sp"
            android:textColor="@color/text_57"
            android:includeFontPadding="false"
            android:layout_marginLeft="@dimen/dp_2"
            android:background="@drawable/app_shape_solid_white_10radius"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_new_version_tip"
            android:layout_marginTop="68dp"
            android:text="新版本"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_shape_solid_white_45radius_bottom"
            android:layout_marginTop="-20dp"
            android:layout_below="@+id/img">
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_57"
                android:textSize="@dimen/font_20sp"
                android:layout_marginLeft="@dimen/dime_26dp"
                android:layout_marginRight="@dimen/dime_26dp"
                android:text="1.修复bug\n2.提升性能"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/tv_desc"
                android:layout_marginTop="@dimen/dime_20dp"
                android:layout_marginBottom="26dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/text_8f8f94"
                    android:textSize="@dimen/font_15sp"
                    android:layout_marginRight="@dimen/dp_25"
                    android:background="@drawable/app_shape_solid_f7f7f7f_32radius"
                    android:text="以后再说"/>
                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_15sp"
                    android:background="@drawable/app_shape_solid_ff8a49_32radius"
                    android:text="立即更新"/>
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>




</LinearLayout>
