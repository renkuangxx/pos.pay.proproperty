<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_householder"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您现在所在的房子人数已满，如果需要继续添加，请输入申请理由。"
        android:textColor="#222222"
        android:padding="16dp"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="7dp"
        android:textStyle="bold"
        android:textSize="@dimen/dime_16sp"
        android:layout_marginRight="15dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="143dp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="19dp"
        android:background="#f5f5f5">
        <EditText
            android:id="@+id/et_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:background="@color/transparent"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:hint="请输入申请理由"
            android:lineSpacingExtra="5dp"
            android:ellipsize="end"
            android:layout_above="@+id/tv_num2"
            android:textSize="@dimen/dime_16sp"
            android:textColor="#2E2E2E"
            android:gravity="top"/>
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_num2"
            android:layout_alignParentBottom="true"
            android:text="0"
            android:paddingBottom="10dp"
            android:layout_alignBottom="@+id/tv_num2"
            android:textColor="#3985FF"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="/100"
            android:textColor="#999999"
            android:textSize="17sp"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dime_10dp"
            android:paddingRight="@dimen/dime_16dp"/>
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dime_13dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="取消"
            android:textColor="#9D9D9D"
            android:textStyle="bold"
            android:padding="@dimen/dp_18"
            android:textSize="@dimen/dime_18sp"
            android:id="@+id/tv_cancle"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f5f5f5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="确定"
            android:padding="@dimen/dp_18"
            android:textStyle="bold"
            android:textColor="#3684DE"
            android:textSize="@dimen/dime_18sp"
            android:id="@+id/tv_sure"/>

    </LinearLayout>
</LinearLayout>