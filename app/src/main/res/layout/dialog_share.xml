<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dime_102dp"
    android:orientation="horizontal"
    android:background="@drawable/app_shape_solid_white_10radius_top"
    android:gravity="center"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_22"
    android:id="@+id/rl_dialog">
    <LinearLayout
        android:id="@+id/ll_share_friend"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@mipmap/ic_share_friend"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信邀请"
            android:textSize="@dimen/font_12sp"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/text_33"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_share_friend_circle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@mipmap/ic_share_circle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朋友圈邀请"
            android:textSize="@dimen/font_12sp"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/text_33"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_save_to_album"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@mipmap/ic_save_to_album"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存至相册"
            android:textSize="@dimen/font_12sp"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/text_33"
            android:gravity="center"/>
    </LinearLayout>



</LinearLayout>