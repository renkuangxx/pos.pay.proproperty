<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_recd_dialog"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="78dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/dime_28dp" >

            <TextView
                android:id="@+id/tv_title"
                style="@style/textview_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:includeFontPadding="false"
                android:text=""
                android:gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:lineSpacingExtra="@dimen/dime_6dp"
                android:includeFontPadding="false"
                android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/title_text_color"
                android:text="是否删除该成员" />
            <TextView
                android:id="@+id/tv_channel_address"
                style="@style/textview_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dime_16dp"
                android:layout_marginLeft="@dimen/dime_20dp"
                android:layout_marginRight="@dimen/dime_20dp"
                android:lineSpacingExtra="@dimen/dime_6dp"
                android:includeFontPadding="false"
                android:visibility="gone"
                android:text=""/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_0_5dp"
                android:background="@color/line_f0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dime_18dp"
            android:layout_marginRight="@dimen/dime_18dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                    android:text="取消"
                    android:gravity="center"
                    android:textColor="@color/text_97"
                    android:textSize="@dimen/sp_16"
                android:background="@color/white"/>

            <View
                android:layout_width="@dimen/dime_0_5dp"
                android:layout_height="match_parent"
                    android:background="@color/line_f0"/>

            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                    android:text="删除"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/main"
                android:background="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>