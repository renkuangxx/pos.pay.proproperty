<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_shape_solid_white_10radius"
        android:layout_marginRight="@dimen/dime_16dp"
        android:layout_marginLeft="@dimen/dime_16dp"
        android:paddingLeft="@dimen/dime_16dp"
        android:paddingRight="@dimen/dime_16dp"
        android:layout_marginTop="@dimen/dime_16dp"
        android:layout_marginBottom="@dimen/dp_200"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_42dp"
            android:layout_marginTop="@dimen/dime_8dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_97"
                android:layout_weight="3"
                android:text="省市区"/>
            <EditText
                android:id="@+id/shengshiqu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/title_text_color"
                android:background="@color/transparent"
                android:hint="请填写省市区"
                android:gravity="center_vertical|right"
                android:drawableRight="@mipmap/arrow_right_light"
                android:drawablePadding="@dimen/dp_5"
                android:textColorHint="@color/grey_font"
                android:layout_weight="5"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_42dp"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="小区名称"
                android:textColor="@color/text_97"
                android:textSize="@dimen/sp_14" />
            <EditText
                android:id="@+id/et_community"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/title_text_color"
                android:background="@color/transparent"
                android:hint="请填写小区名称"
                android:textColorHint="@color/grey_font"
                android:gravity="center_vertical|right"
                android:drawableRight="@mipmap/arrow_right_light"
                android:drawablePadding="@dimen/dp_5"
                android:layout_weight="5"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_42dp"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_97"
                android:layout_weight="3"
                android:text="楼牌号"/>
            <EditText
                android:id="@+id/et_loupaihao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/title_text_color"
                android:background="@color/transparent"
                android:hint="请填写楼牌号"
                android:textColorHint="@color/grey_font"
                android:layout_weight="5"
                android:gravity="center_vertical|right"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_48dp"
            android:layout_marginLeft="@dimen/dime_16dp"
            android:layout_marginRight="@dimen/dime_16dp"
            android:background="@drawable/button_login_shape"
            android:gravity="center"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="@dimen/dime_16sp" />
    </LinearLayout>


</RelativeLayout>
