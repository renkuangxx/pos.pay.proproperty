<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_num_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp"
            android:text="1"
            android:textColor="@color/title_text_color"
            android:textSize="25.5sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_num_2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_num_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp"
            android:text="2"
            android:textColor="@color/title_text_color"
            android:textSize="25.5sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_num_1"
            app:layout_constraintRight_toLeftOf="@+id/tv_num_3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_num_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp"
            android:text="3"
            android:textColor="@color/title_text_color"
            android:textSize="25.5sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_num_2"
            app:layout_constraintRight_toLeftOf="@+id/ll"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_num_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp"
            android:text="4"
            android:textColor="@color/title_text_color"
            android:textSize="25.5sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_num_5"
            app:layout_constraintTop_toBottomOf="@+id/tv_num_1" />

        <TextView
            android:id="@+id/tv_num_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp"
            android:text="5"
            android:textColor="@color/title_text_color"
            android:textSize="25.5sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_num_4"
            app:layout_constraintRight_toLeftOf="@+id/tv_num_6"
            app:layout_constraintTop_toBottomOf="@+id/tv_num_1" />

        <TextView
            android:id="@+id/tv_num_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp"
            android:text="6"
            android:textColor="@color/title_text_color"
            android:textSize="25.5sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_num_5"
            app:layout_constraintRight_toLeftOf="@+id/ll"
            app:layout_constraintTop_toBottomOf="@+id/tv_num_1" />

        <TextView
            android:id="@+id/tv_num_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp"
            android:text="7"
            android:textColor="@color/title_text_color"
            android:textSize="25.5sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_num_8"
            app:layout_constraintTop_toBottomOf="@+id/tv_num_4" />

        <TextView
            android:id="@+id/tv_num_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp"
            android:text="8"
            android:textColor="@color/title_text_color"
            android:textSize="25.5sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_num_4"
            app:layout_constraintRight_toLeftOf="@+id/tv_num_6"
            app:layout_constraintTop_toBottomOf="@+id/tv_num_4" />

        <TextView
            android:id="@+id/tv_num_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp"
            android:text="9"
            android:textColor="@color/title_text_color"
            android:textSize="25.5sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_num_5"
            app:layout_constraintRight_toLeftOf="@+id/ll"
            app:layout_constraintTop_toBottomOf="@+id/tv_num_4" />

        <TextView
            android:id="@+id/tv_num_."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp"
            android:text="."
            android:textColor="@color/title_text_color"
            android:textSize="25.5sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_num_8"
            app:layout_constraintTop_toBottomOf="@+id/tv_num_7" />

        <TextView
            android:id="@+id/tv_num_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp"
            android:text="0"
            android:textColor="@color/title_text_color"
            android:textSize="25.5sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_num_4"
            app:layout_constraintRight_toLeftOf="@+id/tv_num_6"
            app:layout_constraintTop_toBottomOf="@+id/tv_num_7" />

        <ImageView
            android:id="@+id/iv_num_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp"
            android:src="@mipmap/keyboardretraction"
            android:textColor="@color/title_text_color"
            android:textSize="25.5sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_num_0"
            app:layout_constraintLeft_toRightOf="@+id/tv_num_5"
            app:layout_constraintRight_toLeftOf="@+id/ll"
            app:layout_constraintTop_toBottomOf="@+id/tv_num_7" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="96dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_del" />
            </FrameLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/main"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="21sp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/tv_num_1"
            android:background="@color/line_color"
            app:layout_constraintLeft_toRightOf="@+id/tv_num_1"
            app:layout_constraintBottom_toBottomOf="@+id/tv_num_."
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>