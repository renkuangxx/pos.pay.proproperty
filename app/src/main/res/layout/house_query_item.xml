<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dime_16dp"
        android:layout_marginRight="@dimen/dime_16dp"
        android:background="#FFFFFF"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_typeName"
            android:layout_width="@dimen/dime_48dp"
            android:layout_height="@dimen/dime_48dp"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="#E5F0FF"
            android:text="产权人"
            android:gravity="center"
            android:textColor="#006BFF"
            android:textSize="@dimen/sp_14" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dime_16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_communityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="房屋名称"
                android:textColor="#212121"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_buildNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="件远2路168好1号楼1单路168好1号楼1单元1000快"
                android:maxEms="12"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#979797"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="10人"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="#979797"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_status"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="已审核"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="#979797"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/my_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dime_16dp"
                android:src="@mipmap/chevron" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>