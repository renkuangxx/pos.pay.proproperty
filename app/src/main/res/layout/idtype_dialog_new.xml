<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:text="确定"
            android:textColor="#d8b691"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="取消"
            android:layout_marginLeft="15dp"
            android:textColor="#d8b691"
            android:textSize="16sp" />
    </RelativeLayout>
    <com.jingpai.pos.customer.utils.PickerScrollNewView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dime_8dp"
        android:id="@+id/tv_identity_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="居民身份证"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />

    <TextView
        android:id="@+id/tv_passport"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="护照"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />

    <TextView
        android:id="@+id/tv_else"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="其他"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

</LinearLayout>