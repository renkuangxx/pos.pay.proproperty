<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/ll_font"
        android:layout_centerInParent="true"
        android:layout_width="279dp"
        android:background="@drawable/bg_invoice"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/dime_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开票金额确认"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#222222"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可开票总金额"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.00元"
                android:textColor="#FF8A49"
                android:textSize="@dimen/sp_16"/>
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="@dimen/dime_16dp"
            android:layout_marginRight="@dimen/dime_16dp"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_line"/>
      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="138dp"
          android:layout_marginTop="@dimen/dime_8dp"
          android:layout_marginLeft="@dimen/dime_16dp"
          android:layout_marginRight="@dimen/dime_16dp"
          android:id="@+id/rv_detil"/>
        <TextView
            android:id="@+id/tv_apply_go"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dime_16dp"
            android:layout_marginTop="@dimen/dime_32dp"
            android:layout_marginRight="@dimen/dime_16dp"
            android:background="@drawable/button_login_shapes"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="确认，去开票"
            android:textColor="@color/white"
            android:textSize="@dimen/dime_16sp" />
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dime_16dp"
            android:textSize="@dimen/sp_12"
            android:textColor="#999999"
            android:layout_marginLeft="@dimen/dime_16dp"
            android:layout_marginRight="@dimen/dp_15"
            android:lineSpacingExtra="5dp"
            android:layout_marginBottom="@dimen/dime_27dp"
            android:text="提示：根据税务局规定，如专项维修基金费用项不支持开具发票，如有疑问，可联系线下收费员。"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_cancel"
        android:layout_width="@dimen/dime_40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/ll_font"
        android:layout_alignRight="@+id/ll_font">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="12dp"
            android:layout_centerInParent="true"
            android:layout_height="12dp"
            android:background="@mipmap/icon_cha" />
    </RelativeLayout>
</RelativeLayout>