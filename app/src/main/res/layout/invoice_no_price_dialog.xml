<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/ll_font"
        android:layout_centerInParent="true"
        android:layout_width="279dp"
        android:background="@drawable/bg_invoice"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/dime_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#222222"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dime_16dp"
            android:layout_marginLeft="@dimen/dime_16dp"
            android:layout_marginRight="@dimen/dp_15"
            android:lineSpacingExtra="5dp"
            android:layout_marginBottom="@dimen/dime_27dp"
            android:text="根据税务局规定，您目前缴费的收费项暂不支持开具发票，可线下到物业服务中心开具收据，对您造成的不便，敬请谅解。"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dime_16dp"
            android:layout_height="wrap_content"
            android:textColor="#FF8A49"
            android:textSize="@dimen/dime_16sp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dime_14dp"
            android:text="我知道了"/>
    </LinearLayout>

</RelativeLayout>