<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/ll_big"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white"
        android:layout_marginTop="@dimen/dp_8"
    android:orientation="horizontal">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_big">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="@dimen/dime_17dp"
        android:text=""
        android:textColor="#212121"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_marginLeft="@dimen/dime_8dp"
        android:layout_toRightOf="@+id/tv_name"
        android:background="@mipmap/nv" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_marginLeft="@dimen/dime_8dp"
        android:layout_toRightOf="@+id/iv_sex"
        android:text=""
        android:textColor="#979797"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/iv_jiantou"
        android:text="提交成功"
        android:visibility="gone"
        android:textColor="#FF8A49"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/shen_fen_zheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_marginTop="@dimen/dime_8dp"
        android:text=""
        android:layout_marginBottom="17dp"
        android:textColor="#404040"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_status"
        android:layout_alignRight="@+id/tv_status"
        android:layout_marginTop="@dimen/dime_8dp"
        android:layout_marginBottom="14dp"
        android:text="点击继续"
        android:visibility="gone"
        android:textColor="#404040"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_tijiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已提交"
        android:textSize="@dimen/dime_14sp"
        android:textColor="#404040"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_jiantou"/>
    <ImageView
        android:id="@+id/iv_jiantou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:visibility="invisible"
        android:background="@mipmap/chevron" />
</RelativeLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#FFF55030"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/delete"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp" />

</LinearLayout>