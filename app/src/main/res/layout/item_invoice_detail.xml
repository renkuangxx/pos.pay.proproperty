<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dime_16dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        android:text="物业服务费"/>
    <TextView
        android:id="@+id/tv_detail_month"
        android:layout_toRightOf="@+id/tv_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_2"
        android:paddingRight="@dimen/dime_7dp"
        android:paddingLeft="@dimen/dime_7dp"
        android:background="@drawable/bg_2_invoice"
        android:textColor="#FF8A49"
        android:text="2月"/>
    <TextView
        android:id="@+id/tv_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dime_14sp"
        android:textColor="#FF8A49"
        android:layout_alignParentRight="true"
        android:text="300.00元"/>

</RelativeLayout>