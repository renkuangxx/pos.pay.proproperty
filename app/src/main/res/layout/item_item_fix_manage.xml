<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dime_8dp"
        android:padding="@dimen/dime_8dp"
        android:orientation="vertical"
        android:background="@color/text_0d222222">
        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_text_color"
            tools:text="预约签约"
            android:textSize="@dimen/text_size_15"/>
        <TextView
            android:id="@+id/tv_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_55"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dime_8dp"
            tools:text="2020.05.20 13:14"
            android:textSize="@dimen/text_size_14"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_event_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dime_8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_event_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dime_4dp"/>


    </LinearLayout>


</LinearLayout>
