<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="203dp"
    android:id="@+id/ll_outside"
    android:layout_marginTop="@dimen/dime_8dp"
    android:layout_marginRight="@dimen/dime_8dp"
    android:background="@drawable/shape_white_corner_5"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="168dp"
            android:layout_height="96dp"
            android:scaleType="fitXY"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/mengceng"
            android:layout_width="168dp"
            android:layout_height="22dp"
            android:text=""
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:paddingTop="3dp"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/dime_8dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_life_space"/>
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_marginTop="@dimen/dime_3dp"
        android:layout_below="@+id/cd_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#222222"
            android:paddingRight="@dimen/dime_8dp"
            android:paddingLeft="@dimen/dime_8dp"
            android:textSize="@dimen/dime_16sp"
            android:maxLines="2"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_title2"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingRight="@dimen/dime_8dp"
            android:paddingLeft="@dimen/dime_8dp"
            android:text=""
            android:textColor="#555555"
            android:maxLines="1"
            android:ellipsize="end"/>
        <ImageView
            android:id="@+id/iv_tou"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:background="@mipmap/tou"
            android:layout_marginLeft="@dimen/dime_8dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_alignParentBottom="true"
            android:text=""
            android:textColor="#979797"
            android:layout_toRightOf="@+id/iv_tou"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:background="@mipmap/unlike"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dime_10dp"
            android:layout_marginRight="@dimen/dime_4dp"
            android:layout_toLeftOf="@+id/tv_num"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_num"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dime_8dp"
            android:text=""
            android:paddingTop="@dimen/dp_10"
            android:textColor="#979797"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>