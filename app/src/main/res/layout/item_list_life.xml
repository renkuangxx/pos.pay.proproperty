<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_outside"
    android:background="@color/white"
    android:layout_height="153dp">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="@dimen/dime_16dp"
        android:paddingLeft="@dimen/dime_16dp"
        android:paddingRight="@dimen/dime_16dp"
        android:layout_marginBottom="@dimen/dime_16dp">

        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="168dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="168dp"
                android:layout_height="96dp"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@+id/rl_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_life_space">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_toLeftOf="@+id/tv_pic_title"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_pic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/dime_12sp" />
            </RelativeLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/fl"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="#222222"
            android:textSize="@dimen/dime_14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@+id/fl"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="#555555"
            android:textSize="@dimen/dime_12sp" />

        <ImageView
            android:id="@+id/iv_touxiang"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_above="@+id/tv_price_"
            android:layout_alignLeft="@+id/tv_content"
            android:background="@mipmap/tou"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_touxiang"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/iv_touxiang"
            android:text=""
            android:textColor="#979797"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_price_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_18"
            android:text="造价："
            android:textColor="#555555"
            android:textSize="@dimen/dime_12sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_toRightOf="@+id/tv_price_"
            android:text=""
            android:textColor="#FF8A49"
            android:textSize="@dimen/dime_16sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dime_16dp"
        android:background="@color/bg_grey" />


</RelativeLayout>