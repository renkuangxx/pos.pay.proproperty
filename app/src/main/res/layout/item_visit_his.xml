<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dime_8dp"
    android:background="@color/white"
    android:paddingStart="32dp"
    android:paddingTop="@dimen/dime_16dp"
    android:paddingEnd="@dimen/dime_32dp"
    android:paddingBottom="@dimen/dime_16dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/chevron"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="曾杰 18088887263"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/dime_16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_car_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/dime_8dp"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/shape_f8a49_2dp"
                android:paddingStart="@dimen/dime_5dp"
                android:paddingTop="@dimen/dime_1dp"
                android:paddingEnd="@dimen/dime_5dp"
                android:paddingBottom="@dimen/dime_1dp"
                android:text="授权车位"
                android:textColor="@color/main"
                android:textSize="@dimen/dime_10sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dime_12dp"
            android:text="车牌号码：闽A8765W"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/dime_14sp" />

        <TextView
            android:id="@+id/tv_visit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dime_8dp"
            android:text="来访日期：2020-02-23 14:00"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/dime_14sp" />

        <TextView
            android:id="@+id/tv_visit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dime_8dp"
            android:text=""
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/dime_14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_car_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dime_8dp"
            android:text="访客停车：地下室-1层2号车位"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/dime_14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_visit_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dime_16dp"
            android:drawableLeft="@mipmap/cheweishouquanshenqing"
            android:drawablePadding="@dimen/dp_8"
            android:text="车位授权申请"
            android:textColor="@color/main"
            android:textSize="@dimen/dime_14sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>