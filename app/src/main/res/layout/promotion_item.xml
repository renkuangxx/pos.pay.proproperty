<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="251dp"
    android:layout_height="211dp"
    android:layout_marginRight="@dimen/dp_8"
    android:orientation="vertical">

    <ImageView
        android:layout_width="251dp"
        android:layout_height="98dp"
        android:src="@drawable/ic_activity1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dime_16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社区马拉松活动专区"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rl_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_blue_border"
                android:paddingBottom="@dimen/dp_2"
                android:text=" 运动 "
                android:textColor="#3985FF"
                android:textSize="@dimen/dime_10sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@id/tv_tag1"
                android:background="@drawable/shape_blue_border"
                android:paddingBottom="@dimen/dp_2"
                android:text=" 健康 "
                android:textColor="#3985FF"
                android:textSize="@dimen/dime_10sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_number_label1"
                android:text="351"
                android:textColor="#FF3B30"
                android:textSize="@dimen/sp_12"></TextView>

            <TextView
                android:id="@+id/tv_number_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="人参加"
                android:textSize="@dimen/sp_12"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥420"
                android:textColor="@color/text_color"
                android:textSize="18sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_border_shape"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_2"
                android:text="去看看"
                android:textColor="#3985FF"
                android:textSize="12sp"></TextView>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>