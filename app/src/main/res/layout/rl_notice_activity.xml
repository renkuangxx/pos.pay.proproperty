<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".activity.show.Home.AnnouncementActivity">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rl_notice_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:background="@drawable/btn_back_arrow" />

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dime_8dp"
            android:text="全部公告"
            android:gravity="center"
            android:layout_weight="8"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dime_18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/dime_16dp"
            android:textSize="@dimen/dime_14sp"
            android:text=""/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rl_notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>