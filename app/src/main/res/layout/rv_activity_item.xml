<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="@dimen/dime_16dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/dime_4dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/ll_promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="108dp">

                    <ImageView
                        android:id="@+id/iv_activity_image"
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_activity1" />
                    <ImageView
                        android:id="@+id/iv_meng"
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:scaleType="fitXY"
                        android:visibility="visible"
                        android:background="#66000000"/>
                    <ImageView
                        android:id="@+id/iv_end"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dime_16dp">

                    <TextView
                        android:id="@+id/tv_activity_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="#222222"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5">

                        <LinearLayout
                            android:id="@+id/ll_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"></LinearLayout>

                        <TextView
                            android:id="@+id/tv_enrollCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/tv_number_label"
                            android:textColor="#FF3B30"
                            android:textSize="@dimen/sp_12"
                            tools:text="" />

                        <TextView
                            android:id="@+id/tv_number_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="人参加"
                            android:textSize="@dimen/sp_12"></TextView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#ff222222"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="免费" />

                        <TextView
                            android:id="@+id/tv_activity_particulars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/shape_border_fillet"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingTop="@dimen/dp_4"
                            android:paddingRight="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_4"
                            android:text="去看看"
                            android:textColor="@color/main"
                            android:textSize="12sp"></TextView>


                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>