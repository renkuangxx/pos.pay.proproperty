<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="285dp"
    android:layout_marginTop="@dimen/dp_8"
    android:background="@drawable/shape_white_corner_4"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_marginRight="@dimen/dime_8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dime_48dp"
            android:layout_height="@dimen/dime_48dp"
            android:layout_weight="1"
            android:src="@mipmap/manger" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_phone"
            android:layout_toRightOf="@id/iv_head"
            android:orientation="vertical"
            android:layout_weight="9"
            android:paddingLeft="@dimen/dime_16dp">

            <TextView
                android:id="@+id/tv_manager_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:text="您的专属客服管家"
                android:textColor="@color/text_97"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_gravity="center"
            android:src="@mipmap/phone" />

    </LinearLayout>

</LinearLayout>