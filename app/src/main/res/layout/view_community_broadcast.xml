<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dime_30dp"
        android:layout_height="@dimen/dime_30dp"
        android:layout_marginLeft="@dimen/dime_19dp"/>


        <TextView
            android:id="@+id/tv_community_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dime_12dp"
            android:ellipsize="end"
            android:lines="1"
            android:includeFontPadding="false"
            android:textSize="@dimen/dime_14sp"
            android:textColor="@color/text_33"/>

</LinearLayout>
