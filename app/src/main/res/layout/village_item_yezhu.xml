<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">
<RelativeLayout
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dime_16dp">

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="@mipmap/village_selected" />

    <TextView
        android:id="@+id/tv_village_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南京怡化中心"
        android:layout_toRightOf="@+id/iv_selected"
        android:layout_centerVertical="true"
        android:textColor="#ff222222"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dime_24dp"
        android:layout_height="wrap_content"
        android:text="xx m"
        android:visibility="gone"
        android:textSize="@dimen/dime_14sp"
        android:textColor="#979797"/>
</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />

</LinearLayout>